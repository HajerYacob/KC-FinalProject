<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1E2FF"
    tools:context=".FemaleDetails">

    <ImageView
        android:id="@+id/brandimmage"
        android:layout_width="335dp"
        android:layout_height="276dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp" />


    <TextView
        android:id="@+id/brand"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="288dp"
        android:fontFamily="@font/syne"
        android:gravity="center_horizontal|top"
        android:text="text"
        android:textAppearance="@style/padel_distr" />

    <TextView
        android:id="@+id/pricedel"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="378dp"
        android:gravity="center_horizontal|top"
        android:text="Price"
        android:textAppearance="@style/time_work"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/phonebutton"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="186dp"
        android:backgroundTint="#84ADF5"
        android:text="phone"
        android:textColor="@color/black"
        app:strokeColor="@color/black" />

    <TextView
        android:id="@+id/Phonenumber"
        android:layout_width="194dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="439dp"
        android:gravity="center_horizontal|top"
        android:text="Phone Number :"
        android:textStyle="bold"
        android:textAppearance="@style/time_work"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="148dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="501dp"
        android:gravity="center_horizontal|top"
        android:text="Addrees :"
        android:textAppearance="@style/time_work"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/map"
        android:layout_width="109dp"
        android:layout_height="17dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="127dp"
        android:layout_toEndOf="@+id/address"
        android:autoLink="all"
        android:fontFamily="@font/syne"
        android:gravity="top"
        android:linksClickable="true"
        android:text="https://goo.gl/maps/4B6y1ZWV9Y8xMCj49"
        android:textColor="#84ADF5" />

    <Button
        android:id="@+id/smspagebutton"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#84ADF5"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="19sp"
        tools:ignore="TouchTargetSizeCheck" />
</RelativeLayout>