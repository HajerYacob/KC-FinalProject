<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/srrse"
    tools:context=".emailpage">

    <TextView
        android:id="@+id/edittextphoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="95dp"
        android:background="#D4DCE2"
        android:ems="10"
        android:gravity="center"
        android:inputType="phone"
        android:minHeight="48dp"
        android:text=" 965 1234 "
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonsend"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="135dp"
        android:background="@drawable/finapage"
        android:backgroundTint="#84ADF5"
        android:fontFamily="@font/syne"
        android:text="send"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/editTextTextSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="230dp"
        android:background="#D4DCE2"
        android:contextClickable="true"
        android:ems="10"
        android:gravity="top"
        android:hint="write a message"
        android:inputType="textMultiLine"
        android:lines="4" />

</RelativeLayout>
