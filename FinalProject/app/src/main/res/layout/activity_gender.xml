<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gender"
    android:layout_width="fill_parent"
    android:background="@color/white"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
   >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/corner" />

    <Button
        android:id="@+id/qrcodebtn"
        android:layout_width="99dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="345dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-33dp"
        android:layout_marginBottom="563dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/GoogleMap"
        android:drawableLeft="@drawable/icon" />

    <TextView
        android:id="@+id/choose_the_"
        android:layout_width="266dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/syne"
        android:gravity="center_horizontal|top"
        android:text="choose the gender"
        android:textAppearance="@style/choose_the_" />

    <ImageView
        android:id="@+id/femaletype"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="115dp"
        app:srcCompat="@drawable/female" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="520dp"
        app:srcCompat="@drawable/corner2" />

    <ImageView
        android:id="@+id/maletype"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="360dp"
        app:srcCompat="@drawable/male" />

</RelativeLayout>